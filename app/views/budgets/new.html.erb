<style>
  .budget-container {
    max-width: 600px;
    margin: 3rem auto;
    padding: 2rem;
  }
  .budget-title {
    text-align: center;
    font-size: 2.5rem;
    font-weight: 800;
    color: #2b3760;
    margin-bottom: 2rem;
  }
  .budget-form {
    background: white;
    border-radius: 1rem;
    padding: 2.5rem;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
  }
  .form-group {
    margin-bottom: 1.5rem;
  }
  .form-label {
    display: block;
    font-weight: 600;
    color: #2b3760;
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }
  .form-label .required {
    color: #e74c3c;
    margin-left: 0.25rem;
  }
  .form-input {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid #e0e0e0;
    border-radius: 0.5rem;
    font-size: 1rem;
    transition: border-color 0.3s ease;
  }
  .form-input:focus {
    outline: none;
    border-color: #2b3760;
  }
  .form-input.error {
    border-color: #e74c3c;
  }
  .error-messages {
    background-color: #fee;
    border: 1px solid #e74c3c;
    border-radius: 0.5rem;
    padding: 1rem;
    margin-bottom: 1.5rem;
  }
  .error-messages h3 {
    color: #e74c3c;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  .error-messages ul {
    list-style: disc;
    margin-left: 1.5rem;
    color: #c0392b;
  }
  .submit-button {
    width: 100%;
    background: #2b3760;
    color: white;
    padding: 1rem;
    border: none;
    border-radius: 0.5rem;
    font-size: 1.1rem;
    font-weight: 700;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }
  .submit-button:hover {
    background: #1e2849;
    transform: translateY(-2px);
  }
  .back-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #2b3760;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 2px 4px rgba(43, 55, 96, 0.2);
    margin-top: 1.5rem;
  }
  .back-button:hover {
    background: #1e2849;
    transform: translateX(-4px);
    box-shadow: 0 4px 8px rgba(43, 55, 96, 0.3);
  }
</style>

<div class="budget-container">
  <h1 class="budget-title">Solicitar Presupuesto</h1>

  <div class="budget-form">
    <% if @budget.errors.any? %>
      <div class="error-messages">
        <h3><%= pluralize(@budget.errors.count, "error") %> impidió guardar el presupuesto:</h3>
        <ul>
          <% @budget.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with model: @budget, local: true, multipart: true do |f| %>
      <div class="form-group">
        <%= f.label :nombre, class: "form-label" do %>
          Apellido y Nombre<span class="required">*</span>
        <% end %>
        <%= f.text_field :nombre, class: "form-input #{@budget.errors[:nombre].any? ? 'error' : ''}", placeholder: "Ingrese su apellido y nombre completo", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :telefono, class: "form-label" do %>
          Teléfono<span class="required">*</span>
        <% end %>
        <%= f.text_field :telefono, class: "form-input #{@budget.errors[:telefono].any? ? 'error' : ''}", placeholder: "Ej: 11 2345-6789", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :dni, class: "form-label" do %>
          DNI<span class="required">*</span>
        <% end %>
        <%= f.text_field :dni, class: "form-input #{@budget.errors[:dni].any? ? 'error' : ''}", placeholder: "Ingrese su número de DNI", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :email, class: "form-label" do %>
          Email<span class="required">*</span>
        <% end %>
        <%= f.email_field :email, class: "form-input #{@budget.errors[:email].any? ? 'error' : ''}", placeholder: "ejemplo@email.com", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :tipo_lentes, class: "form-label" do %>
          Tipo de lentes que busca
        <% end %>
        <%= f.select :tipo_lentes, Budget::TIPOS_LENTES, { include_blank: "Seleccione una opción" }, class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.label :motivo, class: "form-label" do %>
          Motivo de consulta
        <% end %>
        <%= f.text_area :motivo, class: "form-input", placeholder: "Cuéntenos qué necesita o cualquier consulta que tenga", rows: 4 %>
      </div>

      <div class="form-group">
        <%= f.label :imagen, class: "form-label" do %>
          Cargue la foto de su Receta (opcional)
        <% end %>
        <%= f.file_field :imagen, class: "form-input", accept: "image/*" %>
        <small style="color: #666; font-size: 0.9rem; margin-top: 0.5rem; display: block;">
          Adjunte una foto clara de su receta médica para lentes si la tiene disponible
        </small>
      </div>

      <%= f.submit "Enviar Solicitud", class: "submit-button" %>
    <% end %>

    <%= link_to root_path, class: "back-button" do %>
      <span>←</span>
      <span>Volver al inicio</span>
    <% end %>
  </div>
</div>
