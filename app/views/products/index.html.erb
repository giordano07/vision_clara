<style>
  .back-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #2b3760;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 2px 4px rgba(43, 55, 96, 0.2);
  }
  .back-button:hover {
    background: #1e2849;
    transform: translateX(-4px);
    box-shadow: 0 4px 8px rgba(43, 55, 96, 0.3);
  }
  
  .subcategories-wrapper {
    display: flex;
    flex-direction: row;
    align-items: stretch;
    gap: 2rem;
    width: 100%;
  }
  .subcategory-card {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    border: 3px solid #e5e7eb;
    box-shadow: 0 8px 16px rgba(0,0,0,0.15);
    transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    cursor: pointer;
    text-decoration: none;
    display: inline-block;
    flex: 1;
    min-height: 420px;
    background: white;
    margin-right: 2rem;
    vertical-align: top;
  }
  
  .subcategory-card:last-child {
    margin-right: 0;
  }
  .subcategory-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.25);
    border-color: #1dbbb1;
  }
  .subcategory-image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    object-position: center center;
  }
  .subcategory-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(to top, rgba(255,255,255,0.95), rgba(255,255,255,0));
    padding: 2rem;
    color: #111827;
  }
  .subcategory-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.2;
    color: #111827;
  }
  
  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e5e7eb;
  }
  
  .page-title {
    color: #2b3760;
    font-size: 3.5rem;
    font-weight: 800;
    margin: 0;
    line-height: 1.2;
  }
  
  @media (max-width: 768px) {
    .subcategories-wrapper {
      flex-direction: column !important;
      gap: 1.5rem;
    }
    .header-container {
      flex-direction: column;
      gap: 1.5rem;
    }
    .header-container > div:last-child {
      display: none;
    }
    .page-title {
      font-size: 2.5rem;
    }
    
    .subcategory-card {
      width: 100%;
      min-height: 360px;
      margin-right: 0;
      margin-bottom: 1.5rem;
    }
    .subcategory-card:last-child {
      margin-bottom: 0;
    }
    .subcategory-image {
      height: 240px;
    }
  }
  
  @media (max-width: 480px) {
    .subcategory-card {
      width: 100%;
      min-height: 320px;
      margin-right: 0;
    }
    .subcategory-image {
      height: 200px;
    }
    
    /* Ajustar productos para pantallas muy pequeñas */
    .products-grid {
      grid-template-columns: 1fr !important;
    }
  }
  
  @media (min-width: 481px) and (max-width: 768px) {
    /* 2 columnas en tablet */
    .products-grid {
      grid-template-columns: repeat(2, 1fr) !important;
    }
  }
  
  @media (min-width: 769px) {
    /* 3 columnas en desktop */
    .products-grid {
      grid-template-columns: repeat(3, 1fr) !important;
    }
  }
  
  /* Estilos para listado de productos */
  .products-section {
    margin-top: 2rem;
  }
  
  .products-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
    width: 100%;
  }
  
  @media (max-width: 768px) {
    .products-grid {
      grid-template-columns: 1fr !important;
    }
  }
  
  .product-card {
    background: white;
    border-radius: 1rem;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .product-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0,0,0,0.15);
  }
  
  .product-image-container {
    width: 100%;
    height: 250px;
    overflow: hidden;
    background: #f7fafc;
    position: relative;
  }
  
  .product-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  
  .product-image-placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f7fafc;
  }
  
  /* Estilos del carrusel */
  .carousel {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .carousel-inner {
    position: relative;
    width: 100%;
    height: 100%;
  }
  
  .carousel-item {
    display: none;
    width: 100%;
    height: 100%;
  }
  
  .carousel-item.active {
    display: block;
  }
  
  .carousel-control {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(0, 0, 0, 0.5);
    color: white;
    border: none;
    padding: 10px 15px;
    cursor: pointer;
    font-size: 18px;
    z-index: 10;
    border-radius: 4px;
    transition: background 0.3s ease;
  }
  
  .carousel-control:hover {
    background: rgba(0, 0, 0, 0.7);
  }
  
  .carousel-control.prev {
    left: 10px;
  }
  
  .carousel-control.next {
    right: 10px;
  }
  
  .carousel-indicators {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 8px;
    z-index: 10;
  }
  
  .carousel-indicator {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.5);
    border: none;
    cursor: pointer;
    padding: 0;
    transition: background 0.3s ease;
  }
  
  .carousel-indicator.active {
    background: rgba(255, 255, 255, 1);
  }
  
  .carousel-indicator:hover {
    background: rgba(255, 255, 255, 0.8);
  }
  
  .product-content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }
  
  .product-name {
    font-size: 1.25rem;
    font-weight: 700;
    color: #2b3760;
    margin-bottom: 0.75rem;
  }
  
  .product-description {
    color: #6b7280;
    margin-bottom: 1rem;
    font-size: 0.95rem;
    line-height: 1.5;
  }
  
  .product-price {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2b3760;
    margin-bottom: 1rem;
  }
  
  .product-whatsapp-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: #25d366;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    width: 100%;
    justify-content: center;
    margin-top: auto;
  }
  
  .product-whatsapp-button:hover {
    background: #20ba5a;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(37, 211, 102, 0.3);
  }
  
  .empty-products {
    text-align: center;
    padding: 4rem 2rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
</style>

<!-- Contenedor del botón y título en una línea -->
<div class="header-container">
  <div>
    <% if @subcategory.present? %>
      <%= link_to category_path(@category), class: "back-button" do %>
        <span>←</span>
        <span>Volver a <%= Product.categoria_nombre(@category) %></span>
      <% end %>
    <% elsif @category.present? %>
      <%= link_to root_path, class: "back-button" do %>
        <span>←</span>
        <span>Volver al inicio</span>
      <% end %>
    <% end %>
  </div>
  
  <div style="flex: 1; text-align: center;">
    <h1 class="page-title">
      <% if @category.present? %>
        <%= Product.categoria_nombre(@category) %>
        <% if @subcategory.present? %>
          <span style="font-weight: 400;"> - <%= @subcategory.titleize %></span>
        <% end %>
      <% else %>
        Productos
      <% end %>
    </h1>
  </div>
  
  <div style="width: 180px;"></div>
</div>

<% if @category.present? && !@subcategory.present? %>
  <!-- Contenedor de las tarjetas de subcategorías -->
  <div class="subcategories-wrapper flex flex-row mb-8 w-full">
    <% Product::SUBCATEGORIAS[@category]&.each do |subcategoria| %>
      <% productos_count = Product.where(activo: true, categoria: @category, subcategoria: subcategoria).count %>
      <%= link_to category_subcategory_path(@category, subcategoria.parameterize), class: "subcategory-card" do %>
        <%= image_tag "#{@category}-#{subcategoria.parameterize}.jpg", 
                      alt: subcategoria.titleize, 
                      class: "subcategory-image" %>
        <div class="subcategory-overlay">
          <h2 class="subcategory-title"><%= subcategoria.titleize %></h2>
          <p class="text-sm opacity-90 mt-2">
            <%= productos_count %> <%= productos_count == 1 ? 'producto' : 'productos' %> disponible<%= productos_count == 1 ? '' : 's' %> →
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

<!-- Sección para mostrar productos cuando hay subcategoría seleccionada -->
<% if @subcategory.present? && @products.any? %>
  <div class="products-section">
    <div class="products-grid" style="display: grid; grid-template-columns: repeat(3, 1fr); gap: 1.5rem;">
      <% @products.each_with_index do |product, index| %>
        <div class="product-card">
          <div class="product-image-container">
            <% 
              # Preferir imagenes nuevas, si no imagen antigua, si no placeholder
              imagenes = product.imagenes.attached? ? product.imagenes : (product.imagen.attached? ? [product.imagen] : [])
            %>
            
            <% if imagenes.any? %>
              <div class="carousel" id="carousel-<%= product.id %>">
                <div class="carousel-inner">
                  <% imagenes.each_with_index do |imagen, img_index| %>
                    <div class="carousel-item <%= 'active' if img_index == 0 %>">
                      <%= image_tag imagen, alt: "#{product.nombre} - Imagen #{img_index + 1}", class: "product-image" %>
                    </div>
                  <% end %>
                </div>
                
                <% if imagenes.count > 1 %>
                  <button class="carousel-control prev" onclick="moveCarousel(<%= product.id %>, -1)">❮</button>
                  <button class="carousel-control next" onclick="moveCarousel(<%= product.id %>, 1)">❯</button>
                  
                  <div class="carousel-indicators">
                    <% imagenes.each_with_index do |_, img_index| %>
                      <button class="carousel-indicator <%= 'active' if img_index == 0 %>" 
                              onclick="goToSlide(<%= product.id %>, <%= img_index %>)"></button>
                    <% end %>
                  </div>
                <% end %>
              </div>
            <% else %>
              <div class="product-image-placeholder">
                <i class="fas fa-glasses" style="font-size: 3rem; color: #cbd5e0;"></i>
              </div>
            <% end %>
          </div>
          <div class="product-content">
            <h2 class="product-name"><%= product.nombre %></h2>
            <p class="product-description"><%= product.descripcion %></p>
            <p class="product-price">$ <%= number_with_precision(product.precio, precision: 2) %></p>
            <%= link_to whatsapp_link_for(product.nombre), class: "product-whatsapp-button", target: "_blank", rel: "noopener" do %>
              <i class="fab fa-whatsapp"></i>
              <span>Consultar por WhatsApp</span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
<% elsif @subcategory.present? && @products.empty? %>
  <div class="empty-products">
    <i class="fas fa-inbox" style="font-size: 4rem; color: #cbd5e0; margin-bottom: 1rem;"></i>
    <p class="text-gray-500 text-lg">No hay productos disponibles en esta categoría.</p>
  </div>
<% end %>

<script>
  // Objeto para almacenar el índice actual de cada carrusel
  const carouselStates = {};
  
  // Inicializar el estado de cada carrusel
  document.addEventListener('DOMContentLoaded', function() {
    const carousels = document.querySelectorAll('.carousel');
    carousels.forEach(carousel => {
      const productId = carousel.id.replace('carousel-', '');
      carouselStates[productId] = 0;
    });
  });
  
  function moveCarousel(productId, direction) {
    const carousel = document.getElementById('carousel-' + productId);
    if (!carousel) return;
    
    const items = carousel.querySelectorAll('.carousel-item');
    const indicators = carousel.querySelectorAll('.carousel-indicator');
    
    if (items.length === 0) return;
    
    // Obtener el índice actual
    let currentIndex = carouselStates[productId] || 0;
    
    // Remover la clase active del elemento actual
    items[currentIndex].classList.remove('active');
    if (indicators.length > 0) {
      indicators[currentIndex].classList.remove('active');
    }
    
    // Calcular el nuevo índice
    currentIndex = (currentIndex + direction + items.length) % items.length;
    
    // Agregar la clase active al nuevo elemento
    items[currentIndex].classList.add('active');
    if (indicators.length > 0) {
      indicators[currentIndex].classList.add('active');
    }
    
    // Guardar el nuevo estado
    carouselStates[productId] = currentIndex;
  }
  
  function goToSlide(productId, slideIndex) {
    const carousel = document.getElementById('carousel-' + productId);
    if (!carousel) return;
    
    const items = carousel.querySelectorAll('.carousel-item');
    const indicators = carousel.querySelectorAll('.carousel-indicator');
    
    if (items.length === 0 || slideIndex < 0 || slideIndex >= items.length) return;
    
    // Obtener el índice actual
    const currentIndex = carouselStates[productId] || 0;
    
    // Remover la clase active del elemento actual
    items[currentIndex].classList.remove('active');
    if (indicators.length > 0) {
      indicators[currentIndex].classList.remove('active');
    }
    
    // Agregar la clase active al nuevo elemento
    items[slideIndex].classList.add('active');
    if (indicators.length > 0) {
      indicators[slideIndex].classList.add('active');
    }
    
    // Guardar el nuevo estado
    carouselStates[productId] = slideIndex;
  }
  
  // Soporte para navegación con teclado (opcional pero mejora la UX)
  document.addEventListener('keydown', function(e) {
    const focusedCarousel = document.querySelector('.carousel:focus-within');
    if (!focusedCarousel) return;
    
    const productId = focusedCarousel.id.replace('carousel-', '');
    
    if (e.key === 'ArrowLeft') {
      e.preventDefault();
      moveCarousel(productId, -1);
    } else if (e.key === 'ArrowRight') {
      e.preventDefault();
      moveCarousel(productId, 1);
    }
  });
</script>
